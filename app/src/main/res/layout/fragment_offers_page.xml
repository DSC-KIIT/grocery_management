<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/offerlayout"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardImg"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_margin="6dp"
            android:background="#ffffff"
            app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/offerimage"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/offername"
            android:text="Offer type"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#673AB7"
            android:layout_toRightOf="@+id/cardImg"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearlayoutoffer"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/cardImg"
            android:layout_below="@+id/offername"
            android:weightSum="2">

            <TextView
                android:id="@+id/offertype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/offername"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/cardImg"
                android:layout_weight="0"
                android:text="Buy 2 Get 1 free"
                android:textColor="#FF5722"
                android:textSize="15sp"
                android:textStyle="bold" />



        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commenttext"
            android:text="*T&amp;C apply"
            android:textStyle="italic"
            android:textSize="8sp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/cardImg"
            android:layout_below="@+id/linearlayoutoffer"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>




</androidx.cardview.widget.CardView>